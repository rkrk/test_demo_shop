<!DOCTYPE html>
<html>
<head>
  <link rel="shortcut icon" href="/favicon.ico" type="image/ico"/>
  <title>DemoShop</title>
  <%= stylesheet_link_tag "common", :media=>"all" %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>

<body class="common">
<div class="SiteHeader_common">
  <div id="HeaderContainer" class="Header">

    <%= link_to(image_tag("/images/home/ShoppingLogo.gif"), store_path, {:class => "Logo"}) %>

    <div id="WelcomeSection" class="WelcomeSection">
      <div class="WelcomeMSG">Welcome, (<%= link_to t('application.login_link'), login_url %>)</div>
      <div class="CartLogo">
        <table>
          <tr>
            <td class="LogoCell"><%= link_to image_tag("/images/home/CartLogo.gif"), "/store/category/" %></td>
            <td class="DataCell"><span><%= link_to "#{Cart.find(session[:cart_id]).cart_total_price}", "/store/category/"%></span></td>
          </tr>
        </table>
      </div>
    </div>
    <div id="SiteMenuSection" class="SiteMenuSection">
      <div class="NaviBar_a">
        <%= link_to t('register'), "/register/" %> -
        <%= link_to t('application.login_link'), login_url %>

        <% if session[:user_id] %>
            - <%= link_to t('application.category'), "/store/category/" %> -
            <%= link_to t('application.order_history'), "/store/order_history" %>
            <br>

            <% if User.find(session[:user_id]).role == "admin" %>
                <%= link_to t('orders'), orders_path %> -
                <%= link_to t('application.order_today'), "/admin/order_today" %>
                <br>

                <%= link_to t('merchandises'), merchandises_path %> -
                <%= link_to t('users'), users_path %>
            <% end %>

            <%= button_to t('application.logout'), logout_path, :method => :delete %>
        <% end %>
      </div>
    </div>
  </div>
</div>


<div class="PageBox">
  <table class="PageTable">
    <tbody>
    <tr class="SubHeaderCell">
      <td class="TitleCell">
        <h1><%= %></h1>
      </td>
      <td class="ButtonCell"></td>
    </tr>
    <tr>
      <td class="ContentCell">
        <%= yield %>
      </td>
      <td class="AdCell"></td>
    </tr>
    <tr>
      <td>
        <div class="FooterCell">
          <div class="HorizontalSeparator"></div>
          <div id="XPollinationContainer" class="XPollinationContainer">
            <div class="CategoryPanel">
              <span class="SectionTitle">Top Category</span>
              <% Category.all.each do |c| %>
                  <%= link_to "#{c.category}", "/categories/#{c.id}" %>
              <% end %>
              <span><%= link_to t('application.all_category'), "/categories/", {:class=>"AllItemsLink"} %></span>
            </div>
            <div class="BrandPanel">
              <span class="SectionTitle">Top Brand</span>
              <%= link_to "dummy", "/dummy" %>
              <%= link_to "dummy", "/dummy" %>
              <%= link_to "dummy", "/dummy" %>
              <span><%= link_to t('application.all_brand'), "/brands/", {:class=>"AllItemsLink"} %></span>
            </div>
            <div class="LearnMorePanel">
              <span class="SectionTitle">Learn More</span>
              <%= link_to t('application.help_center'), "/common/faq" %>
              <%= link_to t('application.promotion'), "/common/promotion" %>
              <%= link_to t('application.watch_demo'), "/common/demo" %>
              <%= link_to t('application.whats_new'), "/common/news" %>
              <%= link_to t('application.points'), "/common/point" %>
              <%= link_to t('application.vouchers'), "/common/voucher" %>
            </div>
            <div class="AboutPanel">
              <span class="SectionTitle">About</span>
              <%= link_to t('application.About_us'), "/common/about_us" %>
              <%= link_to t('application.Testimonials'), "/common/testimonial" %>
              <%= link_to t('application.Advertise'), "/common/advertise" %>
              <%= link_to t('application.Affiliate'), "/common/affiliate" %>
              <%= link_to t('application.DeliveryTimeTable'), "/common/delivery_timetable" %>
            </div>
            <div class="ContactPanel">
              <span class="SectionTitle">Contact</span>
              <%= link_to t('application.Contract_us'), "/common/contact" %>
              <%= mail_to "surport@demoshop.com" %>
            </div>
          </div>

        </div>
      </td>
    </tr>
    </tbody>
  </table>
</div>

<%= render '/layouts/footer' %>

</body>
</html>

