<!DOCTYPE html>
<html>
<head>
  <title>DemoShop</title>
  <%= stylesheet_link_tag "scaffold"%>
  <%= stylesheet_link_tag "demoshop", :media=>"all" %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>

<body id="store">
  <div id="header" >
    <%= image_tag("clockwise.jpeg") %>
    <%= "Online Supermarket" %>
  </div>
  
  <div id="sidebar_a">

    <%= link_to 'Register', "/register/" %> <br/>
    <%= link_to 'login', login_url %>  <br/>

    <% if session[:user_id] %>
    <br/>

    <%= link_to 'Home',store_url%> <br>
    <%= link_to 'Category', "/store/category/"%><br /> <br>

    <%= link_to 'Order history', {:controller=>"store", :action=>"order_history"}%><br />

      <% if  User.find(session[:user_id]).role == "admin"  %>

    <br />
      <%= link_to 'Orders', orders_path %><br />
      <%= link_to 'Order Today', { :controller=>"admin", :action=>"order_today"}%><br />
    <br />
      <%= link_to 'Merchandises', merchandises_path %><br />
      <%= link_to 'Users', users_path %><br />
    <br />

      <% end  %>
    <%= button_to 'Logout', logout_path, :method => :delete %>
    <% end %>
  </div>

  <% if @cart %>
	  <%= hidden_div_if(@cart.line_items.empty?, :id => "cart") do %>
	    <%= render @cart%>
	  <% end %>
  <%end%>

  <div id="body">
    <%= yield %>
  </div>
  
  <div id="footer">
    <%= link_to "About us"  %> |
    <%= link_to "Security"  %> |
    <%= link_to "Privacy"   %> |
    <%= link_to "Advertise" %> |
    <%= link_to "Site map"  %> |
    <%= link_to "FAQ"        %> |
    <%= link_to "Contact us"%>
    <br>
    <div id="Copyright">
      Â© myDemoshop Limited, 2011-2011. All rights reserved.
    </div>
  </div>


</body>

</html>
